#Password validation
s = input("Enter your password: ")
length = len(s) >= 8
upper = any(c.isupper() for c in s)
lower = any(c.islower() for c in s)
digit = any(c.isdigit() for c in s)
special = any(c in "!@#$%^&*()-_=+[]{};:'\",.<>?/\\|" for c in s)
conse = all(s[i] != s[i+1] for i in range(len(s)-1)) if len(s) > 1 else True
count = sum([not length, not upper, not lower, not digit, not special,not conse])
print(f"Number of conditions unsatisfied: {count}")


